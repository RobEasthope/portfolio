/** @type {import('eslint').Linter.Config} */
{
  "extends": [
    "@remix-run/eslint-config",
    "@remix-run/eslint-config/node",
    "wesbos/typescript"
  ],
  "rules": {
    "no-console": 1,
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2
      }
    ]
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    "/.cache",
    "/node_modules",
    "/.vercel",
    "/build",
    "/public",
    "remix.config.js",
    "*.d.ts",
    "/legacy-code"
  ]
}
