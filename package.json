{
  "name": "portfolio",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "clear && turbo run dev --no-cache --parallel --continue",
    "start": "yarn dev",
    "build": "clear && turbo run build",
    "next": "clear && npx turbo run dev --scope=next-app --include-dependencies --no-deps",
    "next:build": "clear && npx turbo run build --scope=next-app --include-dependencies --no-deps",
    "storybook": "clear && npx turbo run dev --scope=storybook-app --include-dependencies --no-deps",
    "storybook:build": "clear && npx turbo run build --scope=storybook-app --include-dependencies --no-deps",
    "sanity": "npx turbo run dev --scope=sanity-app --include-dependencies --no-deps",
    "sanity:build": "npx turbo run build --scope=sanity-app --include-dependencies --no-deps",
    "sanity-upgrade": "npm install -g @sanity/cli && cd ./apps/sanity-app && sanity upgrade",
    "lint": "clear && turbo run lint",
    "lint:fix": "clear && turbo run lint:fix",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@types/node": "^17.0.10",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "turbo": "^1.1.10",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "dayjs": "^1.10.7",
    "next-sanity": "^0.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1",
    "sanity-pills": "^1.11.0"
  },
  "resolutions": {
    "**/three": "0.119.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "packageManager": "yarn@1.22.17"
}
