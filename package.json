{
  "name": "portfolio",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "portfolio-next": {
        "dependsOn": [
          "^build",
          "NEXT_PUBLIC_SANITY_PROJECT_ID",
          "NEXT_PUBLIC_SANITY_PROJECT_DATASET",
          "NEXT_PUBLIC_SANITY_API_VERSION",
          "SANITY_API_TOKEN",
          "SANITY_STUDIO_PREVIEW_KEY"
        ]
      },
      "portfolio-sanity": {
        "dependsOn": [
          "^build",
          "SANITY_PROJECT_ID",
          "SANITY_PROJECT_DATASET",
          "SANITY_API_VERSION",
          "SANITY_STUDIO_PREVIEW_SITE",
          "SANITY_STUDIO_API_TOKEN",
          "SANITY_STUDIO_PREVIEW_KEY"
        ]
      },
      "test": {
        "dependsOn": [
          "^build"
        ],
        "outputs": []
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev --parallel --no-cache",
    "build": "turbo run build",
    "next": "npx turbo run dev --scope=portfolio-next --include-dependencies --no-deps",
    "next:build": "npx turbo run build --scope=portfolio-next --include-dependencies --no-deps",
    "sanity": "npx turbo run dev --scope=portfolio-sanity --include-dependencies --no-deps",
    "sanity:build": "npx turbo run build --scope=portfolio-sanity --include-dependencies --no-deps",
    "lint": "clear && turbo run lint",
    "eslint": "cd ./packages/ui && yarn lint && cd ../../apps/portfolio-next && yarn lint && cd ../portfolio-sanity && yarn lint",
    "eslint:fix": "cd ./packages/ui && yarn lint:fix && cd ../../apps/portfolio-next && yarn lint:fix && cd ../portfolio-sanity && yarn lint:fix",
    "sanity-upgrade": "cd ./apps/portfolio-sanity && sanity upgrade",
    "type-check": "cd ./packages/ui && yarn type-check && cd ../../apps/portfolio-next && yarn type-check",
    "types": "npx sanity-codegen",
    "test": "turbo run test",
    "test:ci": "cd ./apps/portfolio-next && yarn test:ci",
    "cypress": "cd ./apps/portfolio-next && yarn cypress",
    "cypress:headless": "cd ./apps/portfolio-next && yarn cypress:headless",
    "e2e": "cd ./apps/portfolio-next && yarn e2e",
    "e2e:headless": "cd ./apps/portfolio-next && yarn e2e:headless",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@types/node": "^17.0.10",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "sanity-codegen": "^0.9.8",
    "turbo": "^1.0.28",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "dayjs": "^1.10.7",
    "next-sanity": "^0.4.0",
    "react": "^17.0.2",
    "react-icons": "^4.3.1",
    "sanity-pills": "^1.11.0"
  },
  "resolutions": {
    "**/three": "0.119.1"
  }
}
